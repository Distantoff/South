<form class="form" action="" method="POST" >
    <div class="contact-form">
        <div class="form-group">
            <input id="name" type="text" name="name" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="form-group">
            <input id="phone" type="text" name="phone" class="form-control" placeholder="Введите телефон">
        </div>
        <div class="form-group">
            <input id="email" type="email" name="email" class="form-control" placeholder="Введите почту" required>
        </div>
        
        <div class="form-group">
            <textarea id="message" name="message" class="form-control" pcols="30" rows="10" placeholder="Your Message" required></textarea>
        </div>
    </div>
    <button type="submit" class="button south-btn">Send Message</button>
</form>
